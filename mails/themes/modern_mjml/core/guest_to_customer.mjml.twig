{% extends '@MjmlMailThemes/modern_mjml/components/layout.mjml.twig' %}

{% block title %}{{ 'Guest to customer'|trans({}, 'Emails.Body', locale) }}{% endblock %}

{% block content %}
<mj-section padding="0 25px">
    <mj-column padding="0">

        <mj-raw>
            <!-- TITLE BEGINING -->
        </mj-raw>
        <mj-text padding-top="0" padding-bottom="20px" font-weight="600" font-size="20px">
            {{ 'Hi {firstname} {lastname},'|trans({}, 'Emails.Body', locale) }}
        </mj-text>
        <mj-raw>
            <!-- TITLE ENDING -->
        </mj-raw>

    </mj-column>
</mj-section>

<mj-raw>
    <!-- BORDER BEGINING -->
</mj-raw>
<mj-section text-align="left" padding="0 50px 40px">
    <mj-column width="25px">
        <mj-divider width="25px" css-class="left" padding-top="0" padding-left="0" padding-right="0" border-width="3px" border-color="#505050"  border-style="solid"></mj-divider>

    </mj-column>
</mj-section>
<mj-raw>
    <!-- BORDER ENDING -->
</mj-raw>

<mj-raw>
    <!-- SUBTITLE BEGINING -->
</mj-raw>
<mj-section padding="0 25px">
    <mj-column padding="0">
        <mj-text padding-bottom="0px" padding-top="0px" font-size="16px" font-weight="600">
            {{ 'Your guest account has been turned into a customer account'|trans({}, 'Emails.Body', locale)|raw }}
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- SUBTITLE ENDING -->
</mj-raw>


<mj-raw>
    <!-- BOX BEGINING -->
</mj-raw>
<mj-section padding="15px 50px 40px">
    <mj-column background-color="#fefefe" border="1px solid #DFDFDF" padding="20px 0">
        <mj-text>
            {{ 'Congratulations, your guest account for <span class="label">{shop_name}</span> has been turned into a customer account!'|trans({}, 'Emails.Body', locale)|raw }}
        </mj-text>
        <mj-text padding-top="0px">
            <span class="label" >{{ 'Email address:'|trans({}, 'Emails.Body', locale)|raw }}</span>&nbsp;<span style="color:#25B9D7;font-weight:600">{email}</span>
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- BOX ENDING -->
</mj-raw>

<mj-raw>
    <!-- CENTER TEXT BEGINING -->
</mj-raw>
<mj-section padding="0 25px 20px">
    <mj-column>
        <mj-text align="center">
            {{ 'You can access your customer account on our shop:'|trans({}, 'Emails.Body', locale)|raw }} <a href="{shop_url}" target="_blank" style="color:#25B9D7; text-decoration:none; display:block; font-weight: 400;">{shop_name}</a>
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- CENTER TEXT ENDING -->
</mj-raw>
{% endblock %}
